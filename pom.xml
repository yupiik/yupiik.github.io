<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>io.yupiik.site</groupId>
  <artifactId>yupiik.github.io</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <name>yupiik.github.io</name>
  <description>OpenSource home site generator.</description>
  <url>https://github.com/yupiik/yupiik.github.io</url>

  <properties>
    <githubServerId>github.com</githubServerId>
    <yupiik-tools.dryRun>false</yupiik-tools.dryRun>
    <yupiik-tools.force>false</yupiik-tools.force>
    <yupiik.settings.xml />
    <yupiik-tools.version>1.2.3-SNAPSHOT</yupiik-tools.version>
    <yupiik.projects.generate>true</yupiik.projects.generate>
    <yupiik.projects.generate.showSkipped>false</yupiik.projects.generate.showSkipped>

    <node.environment>production</node.environment>

    <!-- for tests -->
    <java17.home>${env.JAVA_HOME_17}</java17.home>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
      <version>1.18.32</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.geronimo.specs</groupId>
      <artifactId>geronimo-jsonb_1.0_spec</artifactId>
      <version>1.4</version>
    </dependency>
    <dependency>
      <groupId>org.apache.geronimo.specs</groupId>
      <artifactId>geronimo-json_1.1_spec</artifactId>
      <version>1.5</version>
    </dependency>
    <dependency>
      <groupId>org.apache.johnzon</groupId>
      <artifactId>johnzon-jsonb</artifactId>
      <version>1.2.21</version>
    </dependency>

    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter</artifactId>
      <version>5.11.0-M1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>io.yupiik</groupId>
      <artifactId>bundlebee-core</artifactId>
      <version>1.0.26</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>io.yupiik.maven</groupId>
          <artifactId>yupiik-tools-maven-plugin</artifactId>
          <version>${yupiik-tools.version}</version>
          <dependencies>
            <dependency>
              <groupId>io.yupiik.maven</groupId>
              <artifactId>asciidoc-java</artifactId>
              <version>${yupiik-tools.version}</version>
            </dependency>
          </dependencies>
        </plugin>
      </plugins>
    </pluginManagement>

    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>3.2.5</version>
        <configuration>
          <trimStackTrace>false</trimStackTrace>
          <systemPropertyVariables>
            <maven.home>${maven.home}</maven.home>
            <java17.home>${java17.home}</java17.home> <!-- TBD -->
          </systemPropertyVariables>
        </configuration>
      </plugin>
      <plugin>
        <groupId>com.github.eirslett</groupId>
        <artifactId>frontend-maven-plugin</artifactId>
        <version>1.15.0</version>
        <executions>
          <execution>
            <id>install-node-npm</id>
            <phase>generate-resources</phase>
            <inherited>false</inherited>
            <goals>
              <goal>install-node-and-npm</goal>
            </goals>
            <configuration>
              <installDirectory>${project.basedir}/.node</installDirectory>
              <nodeVersion>v17.3.0</nodeVersion>
              <npmVersion>8.3.0</npmVersion>
            </configuration>
          </execution>
          <execution>
            <id>npm-install</id>
            <phase>process-classes</phase>
            <goals>
              <goal>npm</goal>
            </goals>
          </execution>
          <execution>
            <id>npm-build</id>
            <phase>process-classes</phase>
            <goals>
              <goal>npm</goal>
            </goals>
            <configuration>
              <arguments>run build</arguments>
              <environmentVariables>
                <OUTPUT>${project.build.directory}/${project.build.finalName}/</OUTPUT>
                <PROJECT_VERSION>${project.version}</PROJECT_VERSION>
                <BUILD_DATE>${maven.build.timestamp}</BUILD_DATE>
                <NODE_ENV>${node.environment}</NODE_ENV>
              </environmentVariables>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <installDirectory>${project.basedir}/.node</installDirectory>
          <workingDirectory>${project.basedir}/src/main/frontend</workingDirectory>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <version>3.3.1</version>
        <configuration>
          <encoding>UTF-8</encoding>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.12.1</version>
        <configuration>
          <source>11</source>
          <target>11</target>
          <release>11</release>
          <encoding>UTF-8</encoding>
          <parameters>true</parameters>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.3.0</version>
      </plugin>
      <plugin><!-- mvn [compile] yupiik-tools:serve-minisite -e [-Dyupiik.projects.generate.showSkipped=true] -->
        <groupId>io.yupiik.maven</groupId>
        <artifactId>yupiik-tools-maven-plugin</artifactId>
        <executions> <!-- write/human mode: $ mvn compile yupiik-tools:serve-minisite -e -->
          <execution>
            <id>site</id>
            <phase>process-classes</phase>
            <goals>
              <goal>minisite</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <preferYupiikAsciidoc>true</preferYupiikAsciidoc>
          <title>Yupiik Open Source Software</title>
          <description>Yupiik Open Source Portal. Discover all Yupiik Open Source Software and Libraries.</description>
          <indexText>Fusion documentation</indexText>
          <indexSubTitle>Fusion framework aims at providing a very light java framework and graal native.</indexSubTitle>
          <logoText>Open Source</logoText>
          <logoSideText>Software</logoSideText>
          <requires>
              <require>asciidoctor-diagram</require>
          </requires>
          <attributes>
              <partialsdir>content/_partials</partialsdir>
              <icons>font</icons>
              <project-starter-version>2</project-starter-version>
          </attributes>
          <gravatar>
            <url>https://www.gravatar.com/avatar/%s?d=identicon&amp;size=75</url>
          </gravatar>
          <copyright>Â© 2024 &lt;strong&gt;Yupiik&lt;/strong&gt;. All Rights Reserved</copyright>
          <generateIndex>false</generateIndex>
          <generateSiteMap>true</generateSiteMap>
          <templateAddLeftMenu>false</templateAddLeftMenu>
          <templateDirs>templates</templateDirs>
          <injectBlogMeta>true</injectBlogMeta>
          <siteBase>https://www.yupiik.io</siteBase>
          <!-- drop the right menu removing footer-top.html -->
          <customScripts>
            &lt;script&gt;$('.is-blog').addClass('container');&lt;/script&gt;
          </customScripts>
          <customHead>
            &lt;link rel="stylesheet" href="{{base}}/css/yupiik.github.io.css?v=${project.version}"&gt;
            &lt;!-- Matomo --&gt;
            &lt;script&gt;
              var _paq = window._paq = window._paq || [];
              /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
              _paq.push(['trackPageView']);
              _paq.push(['enableLinkTracking']);
              (function() {
              var u="https://yupiik.matomo.cloud/";
              _paq.push(['setTrackerUrl', u+'matomo.php']);
              _paq.push(['setSiteId', '1']);
              var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
              g.async=true; g.src='//cdn.matomo.cloud/yupiik.matomo.cloud/matomo.js'; s.parentNode.insertBefore(g,s);
              })();
            &lt;/script&gt;
            &lt;!-- End Matomo Code --&gt;
          </customHead>
          <customMenu>
            &lt;ul class="header-menu list-inline mx-md-3 mx-lg-5 mb-0 d-none d-lg-flex" &gt;
              &lt;li class="list-inline-item"&gt;&lt;a title="Starter" href="/project-starter.html"&gt;Starter&lt;/a&gt;&lt;/li&gt;
              &lt;li class="list-inline-item"&gt;&lt;a title="Project" href="/projects.html"&gt;Project&lt;/a&gt;&lt;/li&gt;
              &lt;li class="list-inline-item"&gt;&lt;a title="Community" href="/community.html"&gt;Community&lt;/a&gt;&lt;/li&gt;
              &lt;li class="list-inline-item"&gt;&lt;a title="Blog" href="/blog/"&gt;Blog&lt;/a&gt;&lt;/li&gt;
            &lt;/ul&gt;
          </customMenu>
          <siteBase>/</siteBase>
          <templateExtensionPoints>
            <socialLinks>
              &lt;li class="list-inline-item"&gt;&lt;a title="LinkedIn" target="_blank" href="https://www.linkedin.com/company/yupiik/"&gt;&lt;i class="fab fa-linkedin fa-fw"&gt;&lt;/i&gt;&lt;/a&gt;&lt;/li&gt;
              &lt;li class="list-inline-item"&gt;&lt;a title="Twitter" target="_blank" href="https://twitter.com/Yupiik/"&gt;&lt;i class="fab fa-twitter fa-fw"&gt;&lt;/i&gt;&lt;/a&gt;&lt;/li&gt;
              &lt;li class="list-inline-item"&gt;&lt;a title="Github" target="_blank" href="https://www.github.com/yupiik"&gt;&lt;i class="fab fa-github fa-fw"&gt;&lt;/i&gt;&lt;/a&gt;&lt;/li&gt;
              &lt;li class="list-inline-item"&gt;&lt;a title="Sitemap" target="_blank" href="/sitemap.xml"&gt;&lt;i class="fas fa-rss-square fa-fw"&gt;&lt;/i&gt;&lt;/a&gt;&lt;/li&gt;
              &lt;li class="list-inline-item"&gt;&lt;a title="Yupiik" target="_blank" href="https://www.yupiik.com/"&gt;&lt;img class="yupiik-logo" src="/images/yupiik.png"&gt;&lt;/img&gt;&lt;/a&gt;&lt;/li&gt;
            </socialLinks>
          </templateExtensionPoints>
          <blogPageSize>5</blogPageSize>
          <blogCategoriesCustomizations>
            <Technology>
              <order>2</order>
              <icon>fas fa-microchip</icon>
              <description>Technology/technical investigations and presentations.</description>
            </Technology>
            <Infrastructure>
              <order>3</order>
              <icon>fas fa-network-wired</icon>
              <description>Kubernetes and deployment related posts.</description>
            </Infrastructure>
            <Release>
              <order>4</order>
              <icon>fas fa-gift</icon>
              <description>Project release announces.</description>
            </Release>
            <Other>
              <order>5</order>
              <icon>fa fa-random</icon>
              <description>All other posts.</description>
            </Other>
          </blogCategoriesCustomizations>
          <preActions>
            <preAction>
              <type>io.yupiik.site.GenerateProjectsPage</type>
              <configuration>
                <serverId>${githubServerId}</serverId>
                <settingsXml>${yupiik.settings.xml}</settingsXml>
                <active>${yupiik.projects.generate}</active>
                <showSkipped>${yupiik.projects.generate.showSkipped}</showSkipped>
                <overridesLocations>${project.basedir}/src/main/minisite/oss/metadata/overrides</overridesLocations>
              </configuration>
            </preAction>
          </preActions>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>generate-blog-post-releases</id>
      <build>
        <plugins>
          <plugin>
