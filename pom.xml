                  <tagPattern>{artifactId}-{version}</tagPattern>
                </configuration>
              </execution>
            </executions>
            <configuration>
              <githubServerId>${githubServerId}</githubServerId>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
